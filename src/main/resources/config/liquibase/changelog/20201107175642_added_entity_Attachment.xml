<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Attachment.
    -->
    <changeSet id="20201107175642-1" author="jhipster">
        <createTable tableName="attachment">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="attachment_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="attachment_file_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_attachment_attachment_file_id" />
            </column>
            <column name="remark_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
