<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Appointment.
    -->
    <changeSet id="20200922190127-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment_patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

        <addForeignKeyConstraint baseColumnNames="treatment_id"
                                 baseTableName="appointment"
                                 constraintName="fk_appointment_treatment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>

    </changeSet>
</databaseChangeLog>
