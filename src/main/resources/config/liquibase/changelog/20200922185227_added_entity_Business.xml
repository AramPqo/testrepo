<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <!--
        Added the entity Business.
    -->
    <changeSet id="20200922185227-1" author="jhipster">
        <createTable tableName="business">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="mobile" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="website" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="logo" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="email_footer" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="vat_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="bank_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="iban" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="bic" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="currency_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_business_currency_id" />
            </column>
            <column name="location_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_business_location_id" />
            </column>
            <column name="show_patient_name" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="custom_colors" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="invoice_number" type="bigint">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20200922185227-1-data" author="jhipster" context="faker">
        <loadData
                file="config/liquibase/fake-data/business.csv"
                separator=";"
                tableName="business">
            <column name="id" type="numeric"/>
            <column name="name" type="string"/>
            <column name="description" type="string"/>
            <column name="email" type="string"/>
            <column name="phone" type="string"/>
            <column name="mobile" type="string"/>
            <column name="website" type="string"/>
            <column name="logo" type="string"/>
            <column name="email_footer" type="string"/>
            <column name="vat_number" type="string"/>
            <column name="bank_name" type="string"/>
            <column name="iban" type="string"/>
            <column name="bic" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
