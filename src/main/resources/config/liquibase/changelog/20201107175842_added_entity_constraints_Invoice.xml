<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Invoice.
    -->
    <changeSet id="20201107175842-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="business_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_business_id"
                                 referencedColumnNames="id"
                                 referencedTableName="business"/>

        <addForeignKeyConstraint baseColumnNames="currency_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_currency_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency"/>

        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

        <addForeignKeyConstraint baseColumnNames="appointment_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_appointment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="appointment"/>

        <addForeignKeyConstraint baseColumnNames="treatment_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_treatment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>

    </changeSet>
</databaseChangeLog>
