<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <!--
        Added the entity Appointment.
    -->
    <changeSet id="20200922190127-1" author="jhipster">
        <createTable tableName="appointment">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="end_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="cancelled" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="color_code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="missed" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="notes" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="patient_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="treatment_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="appointment_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
        <dropDefaultValue tableName="appointment" columnName="start_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="appointment" columnName="end_date" columnDataType="datetime"/>
    </changeSet>

</databaseChangeLog>
